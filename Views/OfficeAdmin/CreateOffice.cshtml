@model Oficce

<h1>Crear oficina/puesto</h1>


<div class="row">
    <div class="col-md-4">
       <form asp-action="CreateOffice">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Nombre oficina</label>
                <input asp-for="Name" type="text" class="form-control" id="Name" data="Name">                
            </div>
            <div class="form-group">
                <button type="submit" value="Crear" class="btn btn-primary">Crear</button>
            </div>           
       </form>
    </div>
</div>
            
